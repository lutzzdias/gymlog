<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ir para Listagem de Exercícios" />
    <Button
        android:id="@+id/createExerciseButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Criar exercício" />
    <Button
        android:id="@+id/createWorkoutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Criar treino" />
    <Button
        android:id="@+id/createWorkoutExerciseButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Criar exercício de um treino" />
    <Button
        android:id="@+id/getExerciseByIdButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buscar exercício por Id" />
    <Button
        android:id="@+id/getWorkoutByIdButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buscar treino por Id" />
    <Button
        android:id="@+id/getWorkoutExercisesButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buscar exercícios de um treino" />
    <Button
        android:id="@+id/logDataButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="logar dados" />
</LinearLayout>