<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#33000000" /> <!-- Cor de fundo do item da lista -->
                    <corners android:radius="8dp" /> <!-- Raio dos cantos do item da lista -->
                </shape>
            </item>
            <item
                android:top="4dp"
                android:left="4dp"
                android:right="4dp"
                android:bottom="4dp"
                >
                <shape>
                    <solid android:color="#FFFFFF" /> <!-- Cor da sombra -->
                    <corners android:radius="8dp" /> <!-- Raio dos cantos da sombra -->
                </shape>
            </item>
        </layer-list>
    </item>
</selector>